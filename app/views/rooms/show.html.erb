<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        登録済みルーム一覧
      </h1>
    </div>
  </div>
</section>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
           　<%= attachment_image_tag @room, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @room.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>ルーム内容</th>
                </tr>
                <tr>
                  <td><%= simple_format @room.body %></td>
                </tr>
                <tr>
                  <td><%= @room.money %>円</td>
                </tr>
                <tr>
                  <td><%= @room.address %></td>
                </tr>
              </table>
              
              <% if @room.user.id == current_user.id %>
                <%= link_to "編集", edit_room_path(@room), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @room.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @room.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@room.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @room.user.username %>さんのページへ
          <% end %>
          <%= render 'devise/shared/error_messages', model: @reservation %>
          <div class="column is-full">
            <div class="card">
              <div class="card-content">
                <div class="media">
                  <%= render 'reservations/form' %>                                
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>