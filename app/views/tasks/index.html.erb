<p id="notice"><%= notice %></p>

<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.text_field :search %>
  <%= form.submit 'Search', name: nil %>
<% end %>

<h1>検索結果</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= link_to 'Show', room %></td>
      </tr>
    <% end %>
  </tbody>

 




