<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
       予約した部屋
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <div class="content">
            <table class="table is-narrow">
              <tr class="update-content">
                <th>ルーム画像</th>
                <td><figure class="image is-4by3" "algin-items: center;">
           　     <%= attachment_image_tag @room, :image %>
                </figure></td>
              </tr>
              <tr class="update-content">
                <th>ルーム名</th>
                <td><%= @room.title %></td>
              </tr>
              <tr class="update-content">
                <th>開始日</th>
                <td><%= @reservation.start_date.to_s %></td>
              </tr>
              <tr class="update-content">
                <th>終了日</th>
                <td><%= @reservation.end_date.to_s %></td>
              </tr>
              <tr class="update-content">
                <th>価格</th>
                <td><%= @reservation.total_price %><span>円</span></td>
              </tr>
            </table>
            <%= hidden_field_tag :id, @room.id %>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div>
      <ul>
        <li><%= link_to "マイページに戻る", user_path(current_user.id), class: "return_to_top" %></li>
      </ul>
    </div>
  </div>