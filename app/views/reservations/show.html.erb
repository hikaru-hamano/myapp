<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
       予約完了
      </h1>
    </div>
  </div>
</section>

<div class="container-fiuld user">
    <div class="row">
      <div class="d-flex">
        <div class="col-md-12 user-view">
          <div class="user-view-box"> 
            <table>
              <tr class="update-content">
                <th>予約した部屋</th>
                <td><%= @reservation.room.room_name %></td>
              </tr>
              <tr class="update-content">
                <th>開始日</th>
                <td><%= @reservation.start_date&.strftime("%Y年%m月%d日") %></td>
              </tr>
              <tr class="update-content">
                <th>終了日</th>
                <td><%= @reservation.end_date&.strftime("%Y年%m月%d日") %></td>
              </tr>
              <tr class="update-content">
                <th>価格</th>
                <td><%= @reservation.total_price %><span>円</span></td>
              </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div>
      <ul>
        <li><%= link_to "トップ画面に戻る", user_path(current_user.id), class: "return_to_top" %></li>
      </ul>
    </div>
  </div>