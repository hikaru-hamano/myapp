
<%= form_with url: new_reservation_path(room_id: @room.id), method: :get, local: true do |f| %>
  
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <div class="col-md-6">
            <%= f.label :start_date, "開始日" %>
            <%= f.date_field  :start_date, class: 'form-control mb-4'  %>
          </div>
          <div class="col-md-6">
            <%= f.label :end_date, "終了日" %>
            <%= f.date_field :end_date, class: 'form-control mb-4' %>
          </div>
          <div class="col-md-6">
            <%= f.label :people, "人数" %>
            <%= f.number_field :people, class: 'form-control mb-4' %>
          </div>
          
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit "予約する", class: "button is-danger is-fullwidth m-t-10 m-b-10"  %>   
      </div>
    </div>
  </div>
<% end %>
   