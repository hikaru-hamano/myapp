<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        予約内容確認画面
      </h1>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @reservation, local:true do |f| %>
        <div class="col-md-6">
          <table class="reservation-table">
            <tbody>
                <tr>
                  <td><%= f.label :start_date, "開始日" %></td>
                  <td><%= f.date_field  :start_date, :readonly => true, class: 'form-control mb-4'  %></td>
                </tr>
                <tr>
                  <td><%= f.label :end_date, "終了日" %></td>
                  <td><%= f.date_field  :end_date, :readonly => true, class: 'form-control mb-4'  %></td>
                </tr>
                <tr>
                  <td><%= f.label :people, "人数" %></td>
                  <td><%= f.number_field  :people, :readonly => true, class: 'form-control mb-4'  %></td>
                </tr>
                
                <tr>
                  <td><%= f.label :total_price, "合計金額" %></td>
                  <td><%= f.number_field  :total_price, :readonly => true %><span>円</span></td>
                </tr>
              </tbody>
          </table>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= hidden_field_tag :id, @room_id %>
        <%= f.submit "この日程で予約する", class:  "button is-success"   %>    

        <% end %>
      </div>
    </div>
  </div>
</section>

